<section id='subscribe' class='bg5'>
    <h2 style='border: none;' class='text-center'>subscribe</h2>
    <br>
    <br>
    <div class='content-box row'>
      <div class="col-md-6 sub-left">
        <h1 class='text-center'>Sock & Box</h1>
      </div>
      <div class='col-md-6 sub-right'>
      <%= form_tag charges_path, id:'chargeForm' do %>
        <div class="field">
          <h5><%= label_tag :address, 'address:'  %></h5>
          <%= text_field_tag 'address', nil, style: 'width: 100%;' %>
        </div>
        <div class="field">
          <h5><%= label_tag :city, 'city:'  %></h5>
          <%= text_field_tag 'city', nil, style: 'width: 100%;' %>
        </div>

        <div class="field">
          <h5><%= label_tag :country, 'province:'  %></h5>
          <%= text_field_tag 'country', nil, style: 'width: 100%;' %>
        </div>
        <div class="field">
          <h5><%= label_tag :postal, 'postal:' %></h5>
          <%= text_field_tag 'postal', nil, style: 'width: 100%;' %>
        </div>
        <br>
         	<%= hidden_field_tag 'stripeToken' %>
          <%= hidden_field_tag 'stripeEmail' %>  
          <button id="btn-buy" type="button" class='btn btn-success'>subscribe <i class="fa fa-cc-stripe fa-2x"></i></button>
          <script src="https://checkout.stripe.com/checkout.js"></script>
          <script>
          var handler = StripeCheckout.configure({
            key: '<%= @stripe_key %>',
            token: function(token, arg) {
              document.getElementById("stripeToken").value = token.id;
              document.getElementById("stripeEmail").value = token.email;
              document.getElementById("chargeForm").submit();
            }
          });
           document.getElementById('btn-buy').addEventListener('click', function(e) {
            handler.open({
              name: 'Sock and Box',
              description: 'Monthly Sock Delivered($9.99)',
              amount: 999
          });
          e.preventDefault();
         });
        </script>
      <% end %>
      </div>
    </div>
</section>
